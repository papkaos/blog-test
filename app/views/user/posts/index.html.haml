%p#notice= notice
%h1 Posts
%table{data:{"posts-controller"=>""}}
  %thead
    %tr
      %th Title
      %th Body
      %th{:colspan => "3"}
  %tbody
    - @posts.each do |post|
      %tr{data: {"post-wrapper"=>""}}
        %td= post.title
        %td= post.body
        %td= link_to 'Show', post
        %td= link_to 'Edit', edit_post_path(post)
        -#%td= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }
        %td
          %button{data: {"post-delete-method"=>"delete", "post-delete-url"=>post_path(post, format: :json)}} Delete
%br/
= link_to 'New Post', new_post_path
