- validate_path = url_for(controller: "users", action: "validate_email")
%h1 edit
= form_for @user, :html => { :id => "edit-form", "data-validate-email" => validate_path, multipart: true} do |f|
  .user-profile-avatar
    - if @user.avatar.url.present?
      = image_tag @user.avatar.url, {width: "100%", data: {"avatar-edit" => ""}}
    - else
      %img{"data-avatar-edit"=>""}
    = f.file_field :avatar, class: ("user-avatar" if @user.avatar.url.present?), data: {"upload-button"=>""}
  = f.label :first_name
  = f.text_field :first_name
  = f.label :last_name
  = f.text_field :last_name
  = f.label :email
  = f.text_field :email
  = f.submit "Save"
%br
= link_to 'Back', @user
